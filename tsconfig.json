{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "lib/**/*.ts",
    "index.ts",
    "bin",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}
